<idea-plugin>
    <id>com.faogustavo.claudeclone</id>
    <name>Claude Clone</name>
    <vendor url="https://github.com/faogustavo/claude-clone">faogustavo</vendor>

    <dependencies>
        <module name="intellij.platform.compose"/>
    </dependencies>

    <resource-bundle>messages.ClaudeCloneBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.faogustavo.claudeclone.toolWindow.ClaudeCloneToolWindowFactory"
                    icon="com.faogustavo.claudeclone.ClaudeCloneIcons.ToolWindow"
                    id="ClaudeClone"/>
    </extensions>
</idea-plugin>
